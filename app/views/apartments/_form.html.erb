<%= form_for apartment, local: true do |f| %>
  <% if apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
      <% apartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, '物件名' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent, '賃料' %>
    <%= f.number_field :rent %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :year, '築年数' %>
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= f.label :remarks, '備考' %>
    <%= f.text_area :remarks %>
  </div>

  <%# ネストしたフォーム stations %>
  <%= f.fields_for :stations do |station| %>
    <h3>最寄駅<%= station.index + 1 %></h3>
    <div class="field">
      <%= station.label :route, '路線名' %>
      <%= station.text_field :route %>
    </div><!-- /.field -->

    <div class="field">
      <%= station.label :name, '駅名' %>
      <%= station.text_field :name %>
    </div><!-- /.field -->

    <div class="field">
      <%= station.label :walking_minutes, '徒歩分数' %>
      <%= station.text_field :walking_minutes %>
    </div><!-- /.field -->
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
